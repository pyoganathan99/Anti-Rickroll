{
    "name": "Anti Rickroll",
    "description": "Blocks all recognized Rickroll videos from YouTube",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "src/popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.youtube.com/*"
            ],
            "js": [
                "src/contentScript.js"
            ],
            "run_at": "document_start"
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "src/alternate_view/*"
            ],
            "matches": [
                "*://www.youtube.com/*"
            ]
        }
    ],
    "permissions": [
        "webNavigation",
        "tabs",
        "storage"
    ]
}